<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".register">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Let's Get Started!"
        android:textAlignment="center"
        android:textColor="#320D73"
        android:textSize="34sp"
        android:layout_marginTop="90dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/baseline_person_24" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="text"
            android:text="Enter Your Name"
            android:textColor="#979292"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/baseline_phone_24" />

        <EditText
            android:id="@+id/editTextPhone3"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:ems="10"
            android:text="Enter Your Phone"
            android:textColor="#979292"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/baseline_mail_24" />

        <EditText
            android:id="@+id/editTextTextPostalAddress2"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:ems="10"
            android:text="Enter Your Address"
            android:textColor="#979292"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_password_24" />

        <EditText
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:ems="10"
            android:text="Enter Password"
            android:textColor="#979292"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView50"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_password_24" />

        <EditText
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:ems="10"
            android:text="Confirm Password"
            android:textColor="#979292"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:text="I agree to the terms and conditions"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/Sign_Up"
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

</LinearLayout>
